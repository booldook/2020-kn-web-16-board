extends ../layout/layout-default
block content
	.list-wrapper.wrapper
		include ../include/title-bar
		table.tb-list.table.table-striped.table-hover.text-center
			thead.thead-light
				tr
					th 번호
					th 제목
					th 작성자
					th 첨부파일
					th 작성일
					th 조회수
			tbody
				each v in rs
					tr
						td= v.id
						td.text-left= v.title
						td= v.writer
						td
							if v.icon
								img.icon(src=`${v.icon}` alt="icon")
						td= v.wdate
						td= v.readnum
		.text-center.py-3
			a.btn.btn-primary(href="/board/create") 글쓰기		